---
const offre = Astro.props;
---

<div class="mt-20 px-4 max-w-7xl mx-auto">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        <div class="bg-white shadow-lg rounded-2xl p-4 w-full max-w-sm">
            <h2 class="text-xl font-semibold">{offre.nomMaison}</h2>
            <img
                class="w-full h-48 object-cover rounded-lg mt-2"
                src={offre.image_maison_url}
                alt={offre.nomMaison}
            />
        </div>
    </div>
</div>
